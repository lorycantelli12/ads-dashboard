# ===========================
# CONFIGURAÇÕES GERAIS
# ===========================
DEBUG=True
TIMEZONE=America/Sao_Paulo

# ===========================
# GOOGLE SHEETS
# ===========================
# Opção 1: Service Account (Recomendado para automação)
# Baixe o JSON de credenciais e coloque o caminho aqui
GOOGLE_SHEETS_CREDENTIALS_FILE=credentials/google-service-account.json

# ID da planilha (está na URL: docs.google.com/spreadsheets/d/ID_AQUI/edit)
GOOGLE_SHEETS_SPREADSHEET_ID=seu_spreadsheet_id

# Nome das abas
GOOGLE_SHEETS_CONFIG_TAB=Config
GOOGLE_SHEETS_DATA_TAB=Dados

# ===========================
# META ADS (Facebook/Instagram)
# ===========================
# Obtenha em: https://developers.facebook.com/
META_ACCESS_TOKEN=seu_meta_access_token
META_AD_ACCOUNT_ID=act_123456789
# IDs de campanhas específicas (separadas por vírgula) ou deixe vazio para todas
META_CAMPAIGN_IDS=

# ===========================
# LINKEDIN ADS
# ===========================
# Obtenha em: https://www.linkedin.com/developers/
LINKEDIN_ACCESS_TOKEN=seu_linkedin_access_token
LINKEDIN_AD_ACCOUNT_ID=123456789
# IDs de campanhas específicas ou deixe vazio para todas
LINKEDIN_CAMPAIGN_IDS=

# ===========================
# GOOGLE ADS
# ===========================
# Obtenha em: https://ads.google.com/aw/apicenter
GOOGLE_ADS_DEVELOPER_TOKEN=seu_developer_token
GOOGLE_ADS_CLIENT_ID=seu_client_id.apps.googleusercontent.com
GOOGLE_ADS_CLIENT_SECRET=seu_client_secret
GOOGLE_ADS_REFRESH_TOKEN=seu_refresh_token
GOOGLE_ADS_CUSTOMER_ID=1234567890
# Use MCC (My Client Center) se gerenciar múltiplas contas
GOOGLE_ADS_LOGIN_CUSTOMER_ID=

# ===========================
# COLETA AUTOMÁTICA
# ===========================
# Frequência de coleta (em horas)
COLLECTION_FREQUENCY_HOURS=24
# Horário preferencial para coleta (formato 24h)
COLLECTION_TIME=08:00

# ===========================
# DASHBOARD
# ===========================
# Porta do Streamlit
STREAMLIT_PORT=8501
# Tema (light ou dark)
DASHBOARD_THEME=light
